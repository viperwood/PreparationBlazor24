@page "/"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager


<PageTitle>Counter</PageTitle>
<div style="display: grid; grid-template-rows: 1fr 1fr 1fr; grid-template-columns: 1fr 1fr 1fr">
    <div style="grid-row: 2; grid-column: 2; display: flex; flex-direction: column">
        <button onclick="@RegButton">Registration</button>
        <button onclick="@HospitalizButton">Hospitalization</button>
        <button onclick="@RefButton">Referring patients to diagnostic and treatment measures</button>
    </div>
</div>

@code
{
    private void RegButton()
    {
        NavigationManager.NavigateTo("/Registration");
    }
    private void HospitalizButton()
    {
        NavigationManager.NavigateTo("/Hospitalization");
    }
    private void RefButton()
    {
        
    }
}
