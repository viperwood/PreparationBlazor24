@rendermode InteractiveServer
@page "/HospitalizationMenu"
@inject NavigationManager NavigationManager

<div style="display: grid; grid-template-rows: 1fr 1fr 1fr; grid-template-columns: 1fr 1fr 1fr">
    <div style="grid-row: 2; grid-column: 2; display: flex; flex-direction: column;">
        <h3>HospitalizationMenu</h3>
        <button @onclick="RegisterButton">Зарегистрировать госпитализацию</button>
        <button @onclick="CheckHospitalization">Просмотреть госпитализацию</button>
    </div>
</div>
@code {
    private void RegisterButton()
    {
        NavigationManager.NavigateTo("/Hospitalization");
    }

    private void CheckHospitalization()
    {
        NavigationManager.NavigateTo("/ChackHospitalization");
    }
}